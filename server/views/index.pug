doctype html
html(lang='en')
  head
    title Print QR
    style.
      .each{
      font-family:Calibri !important;
      float:left;
      width:10%;
      text-align:center;
      margin-bottom:20px;
      margin-left:5px;
      font-size:10px;
      font-weight:bold;
      border:1px solid #000;
      }
  body
    #container.col
      each item in toPrint
          if item.ItemNo
            div.each #{item.ItemNo}
              div.block
                img#barcode(src='https://api.qrserver.com/v1/create-qr-code/?data='+item.ItemNo+'&size=70x70', alt='', title=''+item.ItemNo+'', width='70', height='70')
          else
            div.each #{item}
              div.block
                img#barcode(src='https://api.qrserver.com/v1/create-qr-code/?data='+item+'&size=70x70', alt='', title=''+item+'', width='70', height='70')